<div class="cd-sign-infobox">
	<p>Still dont have an account? Go ahead and <%= render "devise/shared/links" %></p>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "cd-form floating-labels"}) do |f| %>
	<fieldset>
		<legend>Account Info</legend>

		<div class="icon">
			<%= f.label :email, "Email", class: "cd-label" %>
			<%= f.email_field :email, autofocus: true, required: true, class: "user" %>
		</div> 

		<div class="icon">
			<%= f.label :password, "Password", class: "cd-label" %>
			<%= f.password_field :password, autofocus: "off", required: true, class: "user" %>
		</div>

		<% if devise_mapping.rememberable? -%>
			<div class="field">
				<%= f.check_box :remember_me %>
				<%= f.label :remember_me %>
			</div>
		<% end -%>

		<div class="actions">
			<%= f.submit "Log in" %>
		</div>
	</fieldset>
<% end %>
